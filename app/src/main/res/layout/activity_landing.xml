<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/landing_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/landing_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_no_outline"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="Loading ..."
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/landing_button_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@android:string/untitled"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome"/>

        <ImageView
            android:id="@+id/background_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:contentDescription="@android:string/untitled"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_blur"/>

        <io.romain.passport.ui.views.SvgLogoView
            android:id="@+id/svg_animated_logo"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/spacing_huge"
            android:padding="8dp"
            app:fillColor="#88ffffff"
            app:makerSize="16dp"
            app:resource="@raw/logo_3"
            app:strokeColor="@android:color/white"
            app:strokeWidth="4dp"/>

        <LinearLayout
            android:id="@+id/landing_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:alpha="0"
            android:orientation="horizontal"
            android:translationY="90dp">

            <TextView
                android:id="@+id/button_register"
                style="@style/Widget.Passport.LandingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_register"
                />

            <TextView
                android:id="@+id/button_login"
                style="@style/Widget.Passport.LandingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_login"/>
        </LinearLayout>
    </FrameLayout>


</FrameLayout>