<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@android:string/untitled"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/background_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@android:string/untitled"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <io.romain.passport.ui.views.SvgLogoView
        android:id="@+id/svg_animated_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:fillColor="@android:color/white"
        app:makerSize="16dp"
        app:resource="@raw/logo_3"
        app:strokeColor="#88ffffff"
        app:strokeWidth="4dp"/>

    <TextView
        android:id="@+id/app_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/svg_animated_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:textSize="63sp"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/button_register"
        android:textColor="@android:color/black"
        android:textSize="22sp"/>


    <TextView
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/button_login"
        android:textColor="@android:color/white"
        android:textSize="22sp"/>


</RelativeLayout>